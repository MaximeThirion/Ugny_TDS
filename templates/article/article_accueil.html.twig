{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block css %}<link rel="stylesheet" href="{{ asset('build/css/article_accueil.css') }}">{% endblock %}

{% block body %}
    <section class="container">
        <article>
            <h4>Les articles les plus récents</h4>
            <div class="row">
                {% for article in listeArticle %}
                    {% if article.afficher == true %}
                        <a href="{{ path('article_page', {'id': article.id}) }}" class="col-3 article">
                            <p>{{ article.titre }}</p>
                            <p>{{ article.soustitre }}</p>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
            <h4>Les articles par activités</h4>
            <div class="row">
                {% for categorie in listeCategorie %}
                    <a href="{{ path('categorie_trier', {'id': categorie.id}) }}" class="col-12">
                        <p>{{ categorie.label }}</p>
                    </a>
                {% endfor %}
            </div>
        </article>
    </section>
{% endblock %}
