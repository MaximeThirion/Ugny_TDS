{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <section class="container">
        <article>
            <div class="row ml-auto mr-auto mb-4">
                <h1 class="mr-2">{{ title }}</h1>
            </div>
            <div class="col m-auto">
                <img class="rounded" src="{{ asset('build/upload/avatar/' ~ app.user.avatar) }}" alt="">
                <a class="btn btn-primary mt-2" href="{{ path('avatar_editer') }}">Changer d'avatar</a>
            </div>
            <div class="col m-auto">
                {{ form_start(form) }}
                <div class="hidden">
                    {{ form_row(form.file) }}
                </div>
                {{ form_row(form.email) }}
                {{ form_row(form.confirm_email, {'label': 'Retapez votre adresse mail' }) }}
                {{ form_row(form.password, {'label': 'Mot de passe'}) }}
                {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe'}) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.telephone, {'label': 'Numero de téléphone'}) }}
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                {{ form_end(form) }}
            </div>
        </article>
    </section>
{% endblock %}