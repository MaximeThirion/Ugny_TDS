{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <section class="col-10 m-auto">
        <article>
            <h1>Partenaires</h1>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Creer à</th>
                    <th scope="col">Modifier à</th>
                    <th scope="col">Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for partenaire in listePartenaire %}
                    <tr>
                        <td class="align-middle"><a href="{{ path('partenaire_page', {'id': partenaire.id}) }}">{{ partenaire.titre }}</a></td>
                        <td class="align-middle">{{ partenaire.creera|date('d-m-Y H:i:s')}}</td>
                        <td class="align-middle">{{ partenaire.modifiera|date('d-m-Y H:i:s') }}</td>
                        <td class="align-middle"><a class="btn btn-primary" href="{{ path('partenaire_modifier', {'id': partenaire.id}) }}"><i class="far fa-edit"></i> Editer</a> <a class="btn btn-danger" href="{{ path('partenaire_supprimer', {'id': partenaire.id}) }}"><i class="far fa-trash-alt"></i> Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </article>
    </section>
{% endblock %}
