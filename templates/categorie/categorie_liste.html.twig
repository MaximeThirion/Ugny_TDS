{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <section class="container">
        <article>
            <h1>Categorie</h1>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Label</th>
                    <th scope="col">Description</th>
                </tr>
                </thead>
                <tbody>
                {% for categorie in listeCategorie %}
                    <tr>
                        <td class="align-middle">{{ categorie.id }}</td>
                        <td class="align-middle">{{ categorie.label }}</td>
                        <td class="align-middle">{{ categorie.description }}</td>
                        <td class="align-middle"><a class="btn btn-primary" href="{{ path('categorie_modifier', {'id': categorie.id}) }}"><i class="far fa-edit"></i> Editer</a> <a class="btn btn-danger" href="{{ path('categorie_supprimer', {'id': categorie.id}) }}"><i class="far fa-trash-alt"></i> Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </article>
    </section>
{% endblock %}
