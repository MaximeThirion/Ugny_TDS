{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<main class="container">
    <h1>{{ title }}</h1>
    {{ form_start(form) }}
        {{ form_row(form.file) }}
        {{ form_row(form.email) }}
        {{ form_row(form.confirm_email, {'label': 'Retapez votre adresse mail' }) }}
        {{ form_row(form.password, {'label': 'Mot de passe'}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe'}) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.telephone, {'label': 'Numero de téléphone'}) }}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
</main>
{% endblock %}
